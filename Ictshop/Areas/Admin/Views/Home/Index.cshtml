@model PagedList.IPagedList<Ictshop.Models.Sanpham>

    @using PagedList.Mvc;


    @{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    }

    <h2>Quản lý sản phẩm </h2>
        <style>
            .button {
                background-color: #4CAF50; /* Green */
                border: none;
                color: yellow;
                padding: 16px 32px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                font-size: 16px;
                margin: 4px 2px;
                transition-duration: 0.4s;
                cursor: pointer;
                border-radius: 10px; /* Làm tròn viền */
            }

            .button {
                background-color: white;
                color: black;
                border: 2px solid #4CAF50;
                
            }

                .button:hover {
                    background-color: #4CAF50;
                    color: white;
                }
        </style>

        <p>
            <button  class="button">@Html.ActionLink("Thêm sản phẩm mới", "Create")</button>
        </p>

    <table class="table table-bordered">
        <tr>

            <th>
                Tên sản phẩm
            </th>
            <th>
                Giá tiền
            </th>
            <th>
                Số lượng
            </th>
            <th>
                Mô tả
            </th>
            <th>
                Thẻ sim
            </th>
            <th>
                Ảnh bìa
            </th>
            <th>
                Tên hãng
            </th>
            <th>
                Hệ điều hành
            </th>
            <th> Hành động</th>
        </tr>

        @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Tensp)
            </td>
            <td>
                @String.Format("{0:0,0}", item.Giatien) VNĐ
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soluong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Thesim)
            </td>
            <td>
                <img src="@Url.Content("~" +item.Anhbia)" width="50" height="50" />
                @*@Html.DisplayFor(modelItem => item.Anhbia)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hangsanxuat.Tenhang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hedieuhanh.Tenhdh)
            </td>
            <td>
                <button class="btn btn-success">
                    @Html.ActionLink("Sửa", "Edit", new { id = item.Masp }, new { @style = "color:white;" })
                </button>
                <button class="btn btn-primary">
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.Masp }, new { @style = "color:white;" })
                </button>
                <button class="btn btn-danger">
                    @Html.ActionLink("Xóa", "Delete", new { id = item.Masp }, new { @style = "color:white;" })
                </button>
            </td>
        </tr>
    }

    </table>
    <!-- Thêm mã phân trang -->
    <br />

    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page }))

    <!-- Kết thúc -->
